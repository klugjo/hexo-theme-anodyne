$highlight-comment      = #8e908c
$highlight-red          = #c82829
$highlight-orange       = #fb6d19
$highlight-green        = #718c00
$highlight-aqua         = #3e999f
$highlight-blue         = #4271ae
$highlight-purple       = #8959a8

// Code Blocks
.content
  figure
    &.highlight
      margin-left 0
      margin-right 0
      figcaption
        padding-top 10px
        font-size 85%
        opacity 0.75
        &:before
          content "\f016"
          font-family FontAwesome
          margin 0 10px 0 20px
        a
          margin-left 10px
        & +
          table
      .gutter
        display none
      .code
        padding-left 15px

.content code, .content pre, .content figure.highlight
  background-color #f7f7f7
  font-family Consolas, "Liberation Mono", Menlo, Courier, monospace
  font-size 85%
  line-height 1.45
  overflow: auto

// Syntax Highlighting
pre
  .comment
  .template_comment
  .diff .header
  .doctype
  .pi
  .lisp .string
  .javadoc
  .meta
    color: $highlight-comment
  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo
  .lisp .body
  .smalltalk .number
  .constant
  .class .title
  .parent
  .haskell .type
    color: $highlight-red
  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
  .preprocessor .keyword
  .shebang
  .symbol
  .symbol .string
  .diff .change
  .special
  .attr_selector
  .important
  .subst
  .cdata
  .clojure .title
  .command
  .tag .value
  .phpdoc
  .tex .formula
  .regexp
    color: $highlight-orange
  .class
  .ruby .class .title
  .css .rules .attribute
    color: $highlight-green
  .string
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
    color: $highlight-green
  .hexcolor
    color: $highlight-aqua
  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title
    color: $highlight-blue
  .keyword
  .javascript .function
  .winutils
  .method
  .addition
  .css .tag
  .request
  .status
  .nginx .title
    color: $highlight-purple